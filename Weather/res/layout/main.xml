<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
        >
    <fragment android:layout_width="wrap_content"
              android:layout_height="fill_parent"
              android:layout_weight="1"
              android:name="android.app.ListFragment" android:id="@+id/fragment"
              class="com.example.Weather.CitiesFragment"/>
    <FrameLayout
            android:layout_width="8dp"
            android:layout_height="fill_parent" android:background="#000000">
    </FrameLayout>
    <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" android:id="@+id/forecast_replacer"
            android:layout_weight="1">
    </FrameLayout>
</LinearLayout>




